

@model BestRestaurants.Models.Restaurant

<h4>Add a new Restaurant:</h4>

@using (Html.BeginForm())
{

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  @Html.LabelFor(model => model.PricePoint)
  @Html.TextBoxFor(model => model.PricePoint)
  @Html.LabelFor(model => model.Location)
  @Html.TextBoxFor(model => model.Location)

<input type="submit" value="Add new item" class="btn btn-default" />
}

<p>@Html.ActionLink("Show all Restaurants", "Index")</p>